<div class="navbar navbar-default navbar-static-top">
  <div class="container">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <span>
      <%= link_to "Project Management App", root_path, 
                  class: "navbar-brand fa fa-rocket" %>
    </span>
    <div class="navbar-collapse collapse navbar-responsive-collapse">
      <ul class="nav navbar-nav">
        <% if current_user && current_user.is_admin? %>
          <li>
            <%= link_to "<i class='fa fa-users'></i> Add Members".html_safe,
                new_member_path, class: 'navbar-link btn btn-primary add-member' %>
          </li>
          <li>
          <%= link_to "<i class='fa fa-briefcase'></i> Change Plan".html_safe, 
                            edit_plan_path, 
                            class: 'navbar-link btn btn-primary edit-plan' %>
          </li>
        <% end %>
      </ul>
      <ul class="nav navbar-right col-md-4">
        <% if current_user %>
          <li class="col-md-8 user-name">
            <%= link_to(' ' + truncate(current_user.email, length: 25).html_safe, 
                          edit_user_registration_path, 
                          class: 'fa fa-user',
                          title: 'Edit Profile') %>
          </li>
          <li class="col-md-1">&nbsp;</li>
          <li class="col-md-3">
            <%= link_to('Logout', destroy_user_session_path,
                        class: 'btn btn-xs btn-danger logout',
                        title: 'Logout', :method => :delete) %>
          </li>
        <% else %>
          <li class="col-md-4 pull-right">
            <%= link_to('Sign In', new_user_session_path, 
                        class: 'btn btn-primary sign-in', 
                        title: 'Sign In') %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
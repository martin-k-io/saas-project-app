<% if current_user %>
  <h3 class="pull-right">Organization: <%= @tenant.name %></h3>
  <%= render 'projects/list' %>
<% else %>
  <div class="jumbotron">
  </div>
  <div class="row">
    <div class="plans clearfix">
      <div class="col-lg-4 col-lg-offset-2 plan">
        <h2>Free Plan - Free</h2>
        <div class="features">
          <ul>
            <li><i class="fa fa-cloud-upload"></i>Unlimited File Uploads</li>
            <li><i class="fa fa-mobile"></i>Responsive design</li>
            <li><i class="fa fa-globe"></i>Access anywhere</li>
            <li><i class="fa fa-clone"></i>1 project</li>
            <li></li>
          </ul>
        </div>
        <p>
          <%= link_to 'Sign Up', new_user_registration_path(plan: "free"), 
                                 class: 'btn btn-primary sign-up' %>
        </p>
      </div>
      <div class="col-lg-4 col-lg-offset-1 plan">
        <h2>Premium Plan - $10</h2>
        <div class="features">
          <ul>
            <li><i class="fa fa-cloud-upload"></i>Unlimited File Uploads</li>
            <li><i class="fa fa-mobile"></i>Responsive design</li>
            <li><i class="fa fa-globe"></i>Access anywhere</li>
            <li class='extra'><i class="fa fa-clone"></i>Unlimited projects</li>
          </ul>
        </div>
        <p>
          <%= link_to 'Sign Up', new_user_registration_path(plan: "premium"),
                                 class: 'btn btn-primary sign-up' %>
        </p>
      </div>
    </div>
  </div>
<% end %>